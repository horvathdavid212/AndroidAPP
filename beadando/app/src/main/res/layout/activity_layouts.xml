<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8F0F0F"
    tools:context=".activity_layouts">

    <Button
        android:id="@+id/btn_landscape"
        android:layout_width="1.3in"
        android:layout_height="wrap_content"
        android:text="Landscape mód"
        app:backgroundTint="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_portrait"
        android:layout_width="1.3in"
        android:layout_height="wrap_content"
        android:text="Portrait mód"
        android:visibility="gone"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_landscape" />

</androidx.constraintlayout.widget.ConstraintLayout>